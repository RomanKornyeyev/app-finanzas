
@{
    ViewBag.Title = "Error 404 - Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.SpecificStyles = "~/Content/Custom_CSS/css-global";
}

<style>
    .container {
        position: absolute;
        top: 50%;
        right: 50%;
        transform: translate(50%, -50%);
        max-width: 600px;
        padding: 20px;
        background-color: #fff;
        box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.25);
        border-radius: 10px;
    }

    h1 {
        font-size: 3em;
        color: #1669a8;
    }

    p {
        font-size: 1.2em;
    }

    .btn-home {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        font-size: 1em;
        color: #fff;
        background-color: #1669a8;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn-home:hover {
        background-color: #115080;
    }

    .fun-emoji {
        font-size: 4em;
        margin: 20px 0;
    }
</style>
<div class="container">
    <h1>Oops! 404</h1>
    <div class="fun-emoji">😜</div>
    <p>Sorry, the page you requested could not be found.</p>
    <p>Please check the URL and try again.</p>
    <a href="@Url.Action("Index", "Home")" class="btn-home">Go to Homepage</a>
</div>